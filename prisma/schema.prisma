generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Employee {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  email     String   @unique
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Report {
  id                Int      @id @default(autoincrement())
  child_id          String
  session_summary   String
  conversation_logs Json
  progress_data     Json
  createdAt         DateTime @default(now())
}

enum Role {
  Viewer
  Admin
  Editor
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Audio {
  id        Int      @id @default(autoincrement())
  input     String
  voice     String
  url       String
  createdAt DateTime @default(now())
}
